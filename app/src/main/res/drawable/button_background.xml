<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="#222222" android:endColor="#FFFFFF" android:startColor="#A3A3A3" />

            <corners android:radius="12dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="#000000" android:endColor="#FFFFFF" android:startColor="#323232" />

            <corners android:radius="12dp" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="#000000" android:endColor="#FFFFFF" android:startColor="#323232" />

            <corners android:radius="12dp" />
        </shape>
    </item>

</selector>