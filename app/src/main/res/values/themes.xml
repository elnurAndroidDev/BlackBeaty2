<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlackBeaty2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#070707</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialogStyle" parent="Theme.Material3.Dark.Dialog.Alert">
        <item name="elevation">2dp</item>
    </style>

    <style name="MineCustomTabTextSmall" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MineCustomTabTextBig" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
    </style>
</resources>